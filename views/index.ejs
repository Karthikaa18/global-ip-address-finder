<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Global IP Address Finder</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        .custom-bg {
            background: linear-gradient(90deg, #1c92d2 0%, #f2fcfe 100%);
        }
    </style>
</head>
<body class="custom-bg h-screen flex items-center justify-center">
    <div class="container mx-auto p-4 max-w-lg">
        <div class="bg-white shadow-md rounded-lg p-6">
            <h1 class="text-2xl font-bold mb-4 text-center">Global IP Address Finder</h1>
            <form id="myForm" method="post" action="/get-ip" class="mb-4">
                <label for="ipInput" class="block text-sm font-medium text-gray-700">IP Address:</label>
                <input type="text" id="ipInput" name="ip" class="mt-1 p-2 block w-full border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                <input id="get" type="submit" value="IP LOOKUP" class="mt-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            </form>
            <div class="response-area bg-gray-50 p-4 rounded-lg shadow-md">
                <% if (error) { %>
                    <p class="text-red-500"><%= error %></p>
                <% } else { %>
                    <ul class="space-y-4">
                        <% if (content.length > 0) { %>
                            <% content.forEach(function(project) { %>
                                <li>
                                    <h2 class="text-xl font-bold">IP: <%= project.ip %></h2>
                                    <p>City: <%= project.city %></p>
                                    <p>Region: <%= project.region %></p>
                                    <p>Country: <%= project.country_name %></p>
                                    <p>Latitude: <%= project.latitude %></p>
                                    <p>Longitude: <%= project.longitude %></p>
                                    <p>Time Zone: <%= project.timezone %></p>
                                    <p>Currency Name: <%= project.currency_name %></p>
                                    <p>Org: <%= project.org %></p>
                                </li>
                            <% }); %>
                        <% } else { %>
                            <li class="text-gray-500">Please enter a valid IP Address</li>
                        <% } %>
                    </ul>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>
